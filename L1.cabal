license:            MIT
license-file:       LICENSE
author:             Rachel Bowyer
maintainer:         rachbowyer@gmail.com
copyright:          Copyright Â© Rachel Bowyer 2024. All rights reserved.
build-type:         Simple
extra-doc-files:    README.md


common warnings
    ghc-options: -Wall

executable L1
    import:           warnings
    main-is:          Main.hs
    build-depends:    base ^>=4.17.2.1,
                      unordered-containers >= 0.2.20-r3,
                      L1Lib
    hs-source-dirs:   app
    default-language: Haskell2010

library L1Lib
    exposed-modules:  AST, Interpreter, Store, TypeInference
    build-depends:    base ^>=4.17.2.1,
                      unordered-containers >= 0.2.20-r3
    hs-source-dirs:   lib
    default-language: Haskell2010

test-suite tests
    type:             exitcode-stdio-1.0
    main-is:          TestMain.hs
    hs-source-dirs:   tests
    build-depends:    base ^>=4.17.2.1,
                      unordered-containers >= 0.2.20-r3,
                      L1Lib,
                      HUnit ^>=1.6
    other-modules:    InterpreterTest, TypeInferenceTest, Programs
    default-language: Haskell2010
